<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Salary Input -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Tax Calculator"
            android:textColor="#03A9F4"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/salaryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter your salary"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <!-- Do you have a child? -->
        <TextView
            android:id="@+id/childQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Do you have a child?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/childRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/childYesRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/childNoRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="No" />
        </RadioGroup>

        <!-- Child Expense Input -->
        <EditText
            android:id="@+id/childExpenseInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter child expense"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <!-- Child Age Input -->
        <EditText
            android:id="@+id/childAgeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter child's age"
            android:inputType="number"
            android:padding="10dp" />

        <!-- Do you have a student loan? -->
        <TextView
            android:id="@+id/studentLoanQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Do you have a student loan?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/studentLoanRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/studentLoanYesRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/studentLoanNoRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="No" />
        </RadioGroup>

        <!-- Student Loan Principal Input -->
        <EditText
            android:id="@+id/loanPrincipalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter student loan principal"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <!-- Province Selection -->
        <TextView
            android:id="@+id/provinceQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Select your province:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/provinceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#03A9F4"
            android:padding="12dp"
            android:text="Calculate Tax" />

        <!-- Result TextView -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#EEEEEE"
            android:padding="10dp"
            android:text="Results will appear here"
            android:textSize="16sp" />


    </LinearLayout>
</ScrollView>
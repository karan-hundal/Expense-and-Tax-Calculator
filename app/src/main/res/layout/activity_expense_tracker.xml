<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back Button"
        android:layout_marginBottom="16dp"
        android:layout_gravity="start"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="4dp"
        android:padding="8dp" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <!-- Expense Amount Input -->
    <EditText
        android:id="@+id/category_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:hint="Enter Category"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#333333" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense Amount"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/expense_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Expense Amount"
        android:inputType="numberDecimal"
        android:background="@android:color/white"
        android:textColor="#333333"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/add_expense_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:backgroundTint="#3498DB"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <!-- Earning Source Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Source of Earning"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/source_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Source of Earning"
        android:background="@android:color/white"
        android:textColor="#333333"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <!-- Earning Amount Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Earning Amount"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/earning_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Earning Amount"
        android:inputType="numberDecimal"
        android:background="@android:color/white"
        android:textColor="#333333"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <!-- Add Earning Button -->
    <Button
        android:id="@+id/add_earning_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Earning"
        android:backgroundTint="#2ECC71"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <!-- Transaction List View -->
    <ListView
        android:id="@+id/transaction_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white"/>

    <!-- Summary Button -->

</LinearLayout>
